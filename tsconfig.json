{
    "extends": "@k2oss/k2-broker-core/shared/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist/types",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "coverage"]
}